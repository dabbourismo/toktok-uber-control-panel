@model ElCaptain.Models.OrderDto
    @{
        Layout = null;
    }

    <!DOCTYPE html>
    <head>
        <link href="~/Content/Site.css" rel="stylesheet" />
    </head>

    @using (Html.BeginForm("AddEditOrder", "Order", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div class="container PanelContainer" style="width:450px;">
            <div class="panel panel-primary">
                <div class="panel-heading">بيانات الرحلة</div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.DeliveryMenDropDownList, new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.DeliveryManId, Model.DeliveryMenDropDownList,
                           new { @class = "form-control", role = "Order", datatoggle = "dropdown", id = "ProductDropDown" })
                                @Html.ValidationMessageFor(model => model.DeliveryMenDropDownList)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @{
                            if (Model.Id == 0)
                            {
                                <input type="submit" value="اضافة" class="btn btn-success" style="width:100%" />
                            }
                            else
                            {
                                <input type="submit" value="تعديل" class="btn btn-success" style="width:100%" />
                            }
                        }
                    </div>


                </div>
            </div>
        </div>
                            }


    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>$.validator.setDefaults({ onkeyup: false });</script>

    <script>
        DropDownSuggestions('ProductDropDown');
    </script>
